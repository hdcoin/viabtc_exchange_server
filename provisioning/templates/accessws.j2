[Unit]
Description=Websocket server
After=network.target alertcenter.service kafka.service

[Service]
Type=forking
SyslogIdentifier=accessws
ExecStart={{root_dir}}/accessws/accessws.exe {{root_dir}}/accessws/config.json

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=10s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
